<!DOCTYPE html>
<html>
<head>
  <title>Bookie</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<center>
		<div id="nav">
        <% if current_user %>
        	<%= link_to "Edit Profile", edit_user_path(current_user.id) %>
        	<%= link_to "Logout", :logout %>
          <%= link_to "Home", :root %>
        <% else %>
        	<%= link_to "Register", new_user_path %> | 
        	<%= link_to "Login", :login %> |
          <%= link_to "Home", :root %>
        <% end %>
    </div>
	</center>

<%= yield %>

</body>
</html>
