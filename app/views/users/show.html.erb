<h1>User Profile</h1>
<p id="notice"><%= notice %></p>
<p>
	<%= image_tag avatar_url(@user) %>
</p>
<p>
	<b>User ID:</b>
	<%= @user.id %>
</p>
<p>
  <b>Name:</b>
  <%= @user.name %>
</p>

<p>
  <b>Email:</b>
  <%= @user.email %>
</p>

<p>
	<b>About me:</b>
	<%= @user.bio %>
</p>

<p>
	<b>Role(s):</b>
	<%= @user.roles %>
</p>

<p>
	<% if can? :update, @user %>
		<%= link_to 'Edit', edit_user_path(@user) %> |
	<% end %>
<%= link_to 'Back', users_path %>
